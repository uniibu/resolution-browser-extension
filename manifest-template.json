{
  "manifest_version": 3,
  "name": "Unstoppable Extension",
  "short_name": "Unstoppable Extension",
  "version": "3.1.0",
  "description": "The Unstoppable Extension is used to access decentralized blockchain domains.",
  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "homepage_url": "http://unstoppabledomains.com",
  "author": "Unstoppable Domains <support@unstoppabledomains.com>",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "icon/48.png"
    }
  },
  "background": {
    "service_worker": "./scripts/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./scripts/content.ts"],
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["./scripts/contentIsolated.ts"],
      "world": "ISOLATED"
    }
  ],
  "options_ui": {"page": "index.html#/options", "open_in_tab": false},
  "host_permissions": [
    "*://*.crypto/*",
    "*://*.zil/*",
    "*://*.wallet/*",
    "*://*.nft/*",
    "*://*.888/*",
    "*://*.blockchain/*",
    "*://*.bitcoin/*",
    "*://*.dao/*",
    "*://*.x/*",
    "*://*.hi/*",
    "*://*.klever/*",
    "*://*.kresus/*",
    "*://*.polygon/*",
    "*://*.anime/*",
    "*://*.manga/*",
    "*://*.binanceus/*",
    "*://*.go/*",
    "*://*.altimist/*",
    "*://*.pudgy/*",
    "*://*.austin/*",
    "*://*.bitget/*",
    "*://*.pog/*",
    "*://*.clay/*",
    "*://*.witg/*",
    "*://*.metropolis/*",
    "*://*.wrkx/*",
    "*://*.secret/*",
    "*://*.unstoppable/*",
    "*://*.google.com/*",
    "*://*.duckduckgo.com/*",
    "*://*.yahoo.com/*",
    "*://*.yandex.ru/*",
    "*://*.qwant.com/*",
    "*://*.mojeek.com/*",
    "*://*.aol.co.uk/*",
    "*://*.baidu.com/*",
    "*://*.bing.com/*",
    "*://*.wiki.com/*",
    "https://api.ud-staging.com/",
    "*://*.fireblocks.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["js/wasm/cosigner.esm.wasm", "./scripts/contentIsolated.ts", "index.html"]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ]
}
